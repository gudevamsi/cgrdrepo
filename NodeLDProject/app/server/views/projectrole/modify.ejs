<html>
	<head>
		<% include ../dojoinclude %>
		<script type="text/javascript">
			dojo.addOnLoad(function(){
				dojo.parser.parse(document.getElementById('myform'));
			});
		</script>
		<style type="text/css">
		table{
 		margin:30px;   
		}
		td{
    	padding: 4px;
   		 }
		</style>
	</head>
	<body class="soria">
		<form method="POST" action="/modifyprojectrole" dojoType="dijit.form.Form" id="myform">
			<% if(typeof oldProjRoleJson != 'undefined') {%>
				<input type="hidden" id="projroleid" name="projroleid" value="<%=oldProjRoleJson.projroleid%>"/>
				<input type="hidden" id="old_projrolename" name="old_projrolename" value="<%=oldProjRoleJson.projrolename%>"/>
				<input type="hidden" id="old_projroledesc" name="old_projroledesc" value="<%=oldProjRoleJson.projroledesc%>"/>
			<% } else { %>
				<input type="hidden" id="projroleid" name="projroleid" value="<%=projectrole.projroleid%>"/>
				<input type="hidden" id="old_projrolename" name="old_projrolename" value="<%=projectrole.projrolename%>"/>
				<input type="hidden" id="old_projroledesc" name="old_projroledesc" value="<%=projectrole.projroledesc%>"/>
			<% } %>
			
			<div class="ElBox" style="opacity:0.40;locked:0;z-index:-1;border-width:1px;border-radius:20px;-o-border-radius:20px;-moz-border-radius:20px;-webkit-border-radius:20px;border-color:#888;border-style:solid;background-color:rgb(218, 234, 247);background-repeat:no-repeat;filter:alpha(opacity = 50);behavior: url(/css/PIE.htc);width:97%;height:98%;position:absolute;background-position:left top" id="el53081_137aaeb2a398eb59cfe05fa6f1052fc9" > </div>
			<div  style="line-height: 60px;height:65px;width:18%;align:center;font-size: 20px;font-weight:bold;font-style: normal;font-family: arial,helvetica,sans-serif;   text-align: center;    margin-top: 5px;    margin-left: 5px;" id="el53081_137aaeb2a398eb59cfe05fa6f1052fc9" > Modify Project Role</div>
			<div style="line-height: 12px;height:12px;width:14%;font-size: 12px;font-weight:bold;font-style: normal;font-family: arial,helvetica,sans-serif;    margin-top: 5px;    margin-left: 15px;"  id="globalerror_err"></div>
			<table style="margin:10px;  border-spacing: 2px;font-size: 10pt;font-family: arial,helvetica,sans-serif;">
				<tr class="t1">
					<td align="left"> Project Role Name * </td>
					<td> <input type="text" data-dojo-type="dijit/form/TextBox" data-dojo-props="trim:true" id="projrolename" name="projrolename" /> </td>
					<td id="projrolename_err"></td>
				</tr>
				<tr class="t2">
					<td align="left" style="vertical-align: top"> Project Role Description * </td>
					<td> <textarea id="projroledesc" name="projroledesc" rows="10" cols="50" data-dojo-type="dijit/form/Textarea" data-dojo-props="trim:true" style="width:400px; height: 100px"></textarea> </td>
					<td id="projroledesc_err" style="vertical-align: top"></td>
				</tr>
				
				<tr class="t1">
					<td align="right"> <button data-dojo-type="dijit/form/Button" type="submit" id="submitbutton" name="submitbutton" value="Submit">Modify</button> </td>
					<td align="left"> <button data-dojo-type="dijit/form/Button" type="reset">Reset</button> </td>
				</tr>	
			</table>
			
		</form>
	</body>
	<script type="text/javascript">
			<% if(typeof errorJson != 'undefined') {%>
				function setErrors(){
					<% for(var i=0;i< errorJson.length; i++){ %>
						//alert('<%=errorJson[i].id%>'+'-->'+'<%=errorJson[i].value%>');
						document.getElementById('<%=errorJson[i].id%>_err').innerHTML='<font color="RED"><%=errorJson[i].value%></font>';
					<% } %>
				}
				setErrors();
			<% } %>
			<% if(typeof projRoleJson != 'undefined') {%>
				function restoreValues(){
					<% for(var i=0;i< projRoleJson.length; i++){ %>
						//alert('<%=projRoleJson[i].id%>'+'-->'+'<%=projRoleJson[i].value%>');
						if(dijit.byId('<%=projRoleJson[i].id%>')!=null){
							dijit.byId('<%=projRoleJson[i].id%>').setAttribute('value', '<%=projRoleJson[i].value%>');
						}
						else{
							document.getElementById('<%=projRoleJson[i].id%>').value='<%=projRoleJson[i].value%>';
						}
					<% } %>
				}
				dojo.addOnLoad(restoreValues);
			<% } %>
			<% if(typeof projectrole != 'undefined') { %>
				function setDateValues(){
					var ref = dijit.byId('projrolename');
					ref.setAttribute('value', '<%=projectrole.projrolename%>');
					
					ref = dijit.byId('projroledesc');
					ref.setAttribute('value', '<%=projectrole.projroledesc%>');
				}
				dojo.addOnLoad(setDateValues);;
			<% } %>
	</script>
</html>